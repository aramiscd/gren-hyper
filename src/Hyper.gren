-- Intern


fromHtmlAttribute : Html.Attribute msg -> Node msg -> Node msg
fromHtmlAttribute attr node =
    case node of
        TextNode _ -> node
        ElementNode ( Element args ) ->
            ElementNode ( Element { args | attributes = Array.pushLast attr args.attributes } )
